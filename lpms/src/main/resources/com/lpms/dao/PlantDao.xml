<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lpms.dao.PlantDao">

    <select id="selectPlantByName" parameterType="String" resultType="com.lpms.pojo.PlantInfo">
        SELECT * FROM plant WHERE plant_name LIKE CONCAT('%', #{plant_name}, '%')
    </select>

    <select id="selectPlantById" parameterType="int" resultType="com.lpms.pojo.PlantInfo">
        SELECT * FROM plant WHERE plant_id = #{plant_id}
    </select>

    <select id="elasticSearchPlant" parameterType="String" resultType="com.lpms.pojo.PlantInfo">
        SELECT * FROM plant WHERE plant_name LIKE CONCAT('%', #{word}, '%')
    </select>


    <insert id="insertPlant" parameterType="com.lpms.pojo.Plant" keyProperty="plant_id" useGeneratedKeys="true">
        INSERT INTO plant (plant_name, species_id, place_id, growth_id)
        VALUES (#{plant_name}, #{species_id}, #{place_id}, #{growth_id})
    </insert>


    <delete id="deletePlantById" parameterType="int">
        DELETE FROM plant WHERE plant_id = #{plant_id}
    </delete>

    <update id="updatePlantgrowth" parameterType="map">
        UPDATE plant
        SET growth_id = #{growth_id}
        WHERE plant_id = #{plant_id}
    </update>
</mapper>